<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:gravity="center"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_bold"
                android:text="CADASTRO"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/nomeInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCadastro"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:background="@drawable/border_selector"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/poppins"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/userInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomeInputCadastro"
                android:hint="Username"
                android:inputType="textPersonName"
                android:background="@drawable/border_selector"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="20dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/senhaInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userInputCadastro"
                android:hint="Senha"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_selector"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/poppins"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/senhaConfirmInputCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/senhaInputCadastro"
                android:hint="Confirmar senha"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_selector"
                android:textColorHint="@color/grey"
                android:fontFamily="@font/poppins"
                android:padding="5dp"/>

            <Button
                android:id="@+id/cadastroBtnCadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Cadastro"
                android:backgroundTint="@color/pinkDark"
                android:fontFamily="@font/poppins_bold"
                android:layout_below="@+id/senhaConfirmInputCadastro"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/previousArrow"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/previous_arrow"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>